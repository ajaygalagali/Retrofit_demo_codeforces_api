<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Enter Handle" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit"
                android:onClick="submitClicked"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handle"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textViewFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FirstName"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textViewLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lastname"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textViewContribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contribution"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textViewOrganisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Org"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textViewRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textViewMaxRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MaxRating"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textViewMaxRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MaxRank"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>